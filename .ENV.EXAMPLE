# ============================================
# SERVER CONFIGURATION
# ============================================
PORT=8080
WORKER_PORT=8081
ENV=development
API_VERSION=v1

# ============================================
# DATABASE (PostgreSQL)
# ============================================
DB_HOST=localhost
DB_PORT=5432
DB_USER=merraki_user
DB_PASSWORD=your_secure_password_here
DB_NAME=merraki_db
DB_SSL_MODE=disable
DB_MAX_CONNECTIONS=100
DB_MAX_IDLE_CONNECTIONS=10
DB_MAX_LIFETIME_MINUTES=60

# ============================================
# REDIS (Caching & Sessions)
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_MAX_IDLE=10
REDIS_MAX_ACTIVE=100

# ============================================
# AUTHENTICATION (PASETO)
# ============================================
PASETO_SYMMETRIC_KEY=your-64-character-symmetric-key-change-this-in-production-now
ACCESS_TOKEN_EXPIRES=5m
REFRESH_TOKEN_EXPIRES=168h
COOKIE_SECURE=false
COOKIE_SAME_SITE=lax

# ============================================
# FILE STORAGE (Cloudinary)
# ============================================
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
CLOUDINARY_FOLDER=merraki

# ============================================
# FILE STORAGE (MinIO - Alternative)
# ============================================
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=merraki
MINIO_USE_SSL=false

# ============================================
# PAYMENT (Razorpay)
# ============================================
RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxxxx
RAZORPAY_KEY_SECRET=your_secret_key_here
RAZORPAY_WEBHOOK_SECRET=your_webhook_secret

# ============================================
# EMAIL (SendGrid)
# ============================================
SENDGRID_API_KEY=SG.xxxxxxxxxxxxxx
EMAIL_FROM=noreply@merraki.com
EMAIL_FROM_NAME=Merraki Solutions

# ============================================
# EMAIL (SMTP - Alternative)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@merraki.com
SMTP_FROM_NAME=Merraki Solutions

# ============================================
# EXTERNAL APIS
# ============================================
EXCHANGE_RATE_API_KEY=your_api_key_here
EXCHANGE_RATE_API_URL=https://api.exchangerate-api.com/v4/latest

# ============================================
# FRONTEND URLS
# ============================================
FRONTEND_URL=http://localhost:3000
ADMIN_URL=http://localhost:3001

# ============================================
# CORS
# ============================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=1m

# ============================================
# MONITORING (Prometheus)
# ============================================
METRICS_ENABLED=true
METRICS_PORT=9090

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=debug
LOG_FORMAT=json
LOG_OUTPUT=stdout

# ============================================
# SECURITY
# ============================================
ARGON2_TIME=1
ARGON2_MEMORY=65536
ARGON2_THREADS=4
ARGON2_KEY_LENGTH=32